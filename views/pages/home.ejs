<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
</head>
<body class="bg-gradient-to-b from-blue-300 to-green-300 min-h-screen">
  <div class="container mx-auto p-5">
    <!-- Header Section -->
    <div class="text-center mb-10">
      <h1 class="text-5xl font-bold text-white mb-4 drop-shadow-lg">Pokédex</h1>
      <p class="text-white text-lg">Gotta Catch 'Em All!</p>
    </div>

    <!-- Search Form -->
    <div class="max-w-md mx-auto mb-10">
      <form action="/search" method="GET" class="flex shadow-lg rounded-full overflow-hidden bg-white">
        <input 
          type="text" 
          name="name" 
          placeholder="Search Pokémon..." 
          class="w-full px-6 py-3 focus:outline-none bg-white placeholder-gray-400"
        >
        <button 
          type="submit" 
          class="bg-blue-500 hover:bg-blue-600 text-white px-8 py-3 transition-colors duration-200"
        >
          Search
        </button>
      </form>
    </div>

    <!-- Pokémon Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 max-w-7xl mx-auto">
      <% pokemonList.forEach(pokemon => { %>
        <a href="/pokemon/<%= pokemon.name %>" 
           class="group bg-white rounded-xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="p-6 text-center bg-gradient-to-b from-gray-50 to-gray-100">
            <!-- Pokéball Icon -->
            <div class="w-16 h-16 mx-auto mb-4">
              <svg viewBox="0 0 100 100" class="w-full h-full">
                <!-- Top half (red) -->
                <path d="M50 2 A48 48 0 0 1 98 50 H2 A48 48 0 0 1 50 2" fill="#EF4444"/>
                <!-- Bottom half (white) -->
                <path d="M50 98 A48 48 0 0 1 2 50 H98 A48 48 0 0 1 50 98" fill="white"/>
                <!-- Outer circle -->
                <circle cx="50" cy="50" r="48" stroke="black" stroke-width="4" fill="none"/>
                <!-- Middle line -->
                <path d="M2 50h96" stroke="black" stroke-width="4"/>
                <!-- Center circle (outer) -->
                <circle cx="50" cy="50" r="14" fill="white" stroke="black" stroke-width="4"/>
                <!-- Center circle (inner) -->
                <circle cx="50" cy="50" r="8" fill="#1F2937"/>
              </svg>
            </div>
            
            <h2 class="text-xl capitalize font-bold text-gray-800 mb-2">
              <%= pokemon.name %>
            </h2>
            <div class="inline-block px-4 py-1 rounded-full bg-red-100 text-red-600 text-sm font-semibold">
              #<%= pokemonList.indexOf(pokemon) + 1 %>
            </div>
          </div>
        </a>
      <% }); %>
    </div>
  </div>
  
  <!-- Footer -->
  <footer class="mt-20 pb-8 text-center text-white">
    <%- include("../partials/footer") %>
  </footer>
</body>
</html>   