<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/header") %>
</head>
<body class="bg-gradient-to-b from-blue-300 to-green-300 flex justify-center items-center min-h-screen relative">
    
    <!-- Back Button -->
    <a href="/" class="absolute top-5 left-5 px-4 py-2 bg-black text-white rounded-lg shadow-md">Back</a>

    <div class="relative w-[400px] h-[650px] bg-red-600 rounded-xl shadow-2xl border-4 border-black flex flex-col items-center p-5">
        
        <!-- Pokedex Camera and Lights -->
        <div class="absolute top-4 left-4 flex items-center">
            <div class="w-10 h-10 bg-blue-300 border-4 border-gray-400 rounded-full shadow-lg"></div>
            <div class="ml-3 flex space-x-1">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            </div>
        </div>

        <!-- Pokedex Screen -->
        <div class="w-[90%] h-[250px] bg-gray-200 border-4 border-gray-400 rounded-lg flex flex-col items-center justify-center mt-12 p-3">
            <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>" class="w-40 h-40">
            <h1 class="text-xl font-bold text-gray-800 capitalize">
                <%= pokemon.name %>
            </h1>
        </div>

        <!-- Pokemon Details -->
        <div class="w-[90%] bg-white p-4 mt-4 rounded-lg border-2 border-gray-400">
            <p class="text-lg font-semibold">Height: <%= pokemon.height %></p>
            <p class="text-lg font-semibold">Weight: <%= pokemon.weight %></p>
            <p class="text-lg font-semibold">
                Type: <%= pokemon.types.map(t => t.type.name).join(', ') %>
            </p>
        </div>

        <!-- Pokedex Buttons and D-Pad -->
        <div class="w-full flex justify-between px-8 mt-8 mb-16">
            <!-- D-Pad -->
            <div class="relative w-32 h-32">
                <!-- Up Button -->
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-10 h-10 bg-gray-800 rounded-md shadow-md"></div>
                <!-- Right Button -->
                <div class="absolute top-1/2 right-0 -translate-y-1/2 w-10 h-10 bg-gray-800 rounded-md shadow-md"></div>
                <!-- Down Button -->
                <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-10 h-10 bg-gray-800 rounded-md shadow-md"></div>
                <!-- Left Button -->
                <div class="absolute top-1/2 left-0 -translate-y-1/2 w-10 h-10 bg-gray-800 rounded-md shadow-md"></div>
                <!-- Center -->
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-10 h-10 bg-gray-700 rounded-md"></div>
            </div>

            <!-- Action Buttons -->
            <div class="relative w-32 h-32">
                <div class="absolute grid grid-cols-2 gap-4 transform rotate-45">
                    <!-- X Button -->
                    <div class="w-10 h-10 bg-blue-500 rounded-full shadow-md flex items-center justify-center transform -rotate-45">
                        <span class="text-white font-bold">X</span>
                    </div>
                    <!-- Y Button -->
                    <div class="w-10 h-10 bg-green-500 rounded-full shadow-md flex items-center justify-center transform -rotate-45">
                        <span class="text-white font-bold">Y</span>
                    </div>
                    <!-- A Button -->
                    <div class="w-10 h-10 bg-red-500 rounded-full shadow-md flex items-center justify-center transform -rotate-45">
                        <span class="text-white font-bold">A</span>
                    </div>
                    <!-- B Button -->
                    <div class="w-10 h-10 bg-yellow-500 rounded-full shadow-md flex items-center justify-center transform -rotate-45">
                        <span class="text-white font-bold">B</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="absolute bottom-5 text-center text-gray-200 text-sm">
          <%- include("../partials/footer") %>
        </div>

    </div>

</body>
</html>
